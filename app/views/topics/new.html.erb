<h1> New Topic </h1>

<div class="row">
    <div class="col-md-4">
      <p> Guidlines for topics: </p>
      <ul>
        <li> Make sure the topic is appropriate. </li>
        <li> Check to make sure your topic does not yet exist. </li>
        <li> Smile when you type. </li>
      </ul>
    </div>
    <div class="col-md-8">
      <%= form_for @topic do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
      </div>

      <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter topic description" %>
      </div>

      <div class="form-group">
        <%= render partial: 'labels/form', locals: { f: f, labels: @topic.labels } %>
      </div>

      <div class="form-group">
        <%= f.label :public, class: 'checkbox' do %>
          <%= f.check_box :public %> Public topic
        <% end %>
      </div>

      <%= f.submit "Save", class: 'btn btn-success' %>
      <% end %>
    </div>
</div>

<% content_for :analytic do %>
  <script type="text/javascript"> $(document).ready(function(){ blocmetrics.report("Visited_topics_new"); }); </script>
<% end %>
